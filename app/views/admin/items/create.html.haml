%h1 商品投稿フォーム
= form_with model: @item, url: admin_items_path, local:true do |f|
  %h4 画像
  = f.attachment_field :image
  %h4 商品名
  = f.text_field :name
  %h4 説明
  = f.text_area :introduction
  %div
    %h4 ジャンル選択
    = form_with model:@genre, url:admin_items_path, method: :patch, local:true do |f|
      = f.label :name_id, Genre.name_ids_i18n[:登録済ジャンルから選択]
      = f.select :name_id, options_from_collection_for_select(Genre.all, :id, :name)
%h4 値段
= f.text_area :price
%h4 販売ステータス
= f.radio_button :is_active, "販売中"
= f.label :is_active, "販売中"
= f.radio_button :is_active, "販売停止中"
= f.label :is_active, "販売停止中"
= f.submit '投稿'
