<% @customer_reviews.each do |customer_review| %>
  <div class="pt-2 px-2" style="background-color: #fffffe; border: 2px solid #272343; border-radius: 2px;">
    <%# rateを表示 %>
    <div class="review-rating">
      評価：<%= customer_review.rate %>/5点
      <div class="detail-value", id="star-comf-<%= customer_review.rate %>"></div>
    </div>
        
      <div class="text-left">
        <p>投稿者：<%= customer_review.customer.full_name %></p>
          <p><%= customer_review.comment %></p>
      </div>

      <div class="text-right">
        <p>
          投稿日：<%= customer_review.created_at.strftime('%Y/%m/%d') %> |
            <% if customer_review.customer == current_customer %>
              <%= link_to customer_review_destroy_path(customer_review), method: :delete, class: "btn btn-sm btn-danger" do %>
                コメント削除 <i class="fas fa-trash"></i>
              <% end %>
            <% end %>
        </p>
       </div>
    </div>
  <div class="pb-2"></div>
<% end %>

<script>
    $('#rating-form').raty({
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        starHalf: '<%= asset_path('star-half.png') %>',
        half: true,
        scoreName: 'customer_review[rate]'
    });
</script>
