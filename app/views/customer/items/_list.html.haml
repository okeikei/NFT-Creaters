.container
  .row
    - items.each do |item|
      - if item.is_active == "販売中"
        .col-4.mb-3
          .card.shadow.card-org
            .bg-white
              .col
                = link_to customer_item_path(item.id) do
                  = attachment_image_tag item, :image, class: 'img-fluid sell-item-img'
            .card-body
              %h5.card-title= item.name
              .card-text
                %p
                  アイテム名：#{item.name}
                %p
                  説明：#{item.introduction}
                %p
                  値段：#{item.price}円
                %p
                  ジャンル：#{item.genre.name}
                %p
                  販売ステータス：#{item.is_active}
                %p
                  製作者：#{item.customer.full_name}
                = link_to customer_favorites_path(item.id) do
                  %p
                    ♥：#{item.favorites.count} いいね
