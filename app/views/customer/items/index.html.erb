<% @items.each do |item| %>
 <div>
  <%= link_to item_show_path(item.id) do %>
  <%= attachment_image_tag item, :image %>
  <% end %>
  <p>アイテム名：<%= item.name %></p>
  <p>説明：<%= item.introduction %></p>
  <p>値段：<%= item.price %></p>
 <% @genre.each do |genre| %>
  <p>値段：<%= genre.name %></p>
 <% end %>
  <p>販売ステータス：<%= item.is_active %></p>
</div>
<% end %>
