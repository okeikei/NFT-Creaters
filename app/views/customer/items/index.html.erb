<div class="container">
 <div class="row">
  <% @items.each do |item| %>
   <div class="col-12 col-sm-12 col-md-6 col-lg-4 mb-3">
    <div class="card shadow card-org">
     <div class="bg-white">
      <%= link_to customer_item_path(item.id) do %>
       <%= attachment_image_tag item, :image, class: 'img-fluid sell-item-img' %>
      <% end %>
     </div>
    <div class="card-body">
     <h5 class="card-title"><%= item.name %></h5>
      <div class="card-text">
       <p>アイテム名：<%= item.name %></p>
       <p>説明：<%= item.introduction %></p>
       <p>値段：<%= item.price %>円</p>
       <p>ジャンル：<%= item.genre.name %></p>
       <p>販売ステータス：<%= item.is_active %></p>
       <p>製作者：<%= item.customer.full_name %></p>
       <p>♥：<%= item.favorites.count %> いいね
     </div>
    </div>
   </div>
  </div>
  <% end %>
 </div>
</div>