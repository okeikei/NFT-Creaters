.container
  %h2 Sign up
  = form_with model: @customer, url: customer_registration_path, local: true do |f|
    = render "customer/shared/error_messages", resource: resource
    .field
      %h4 トップ画像
      = f.attachment_field :image
    .field
      = f.label :last_name
      %br/
      = f.text_field :last_name, autofocus: true, autocomplete: "last_name"
    .field
      = f.label :first_name
      %br/
      = f.text_field :first_name, autofocus: true
    .field
      = f.label :last_name_kana
      %br/
      = f.text_field :last_name_kana, autofocus: true
    .field
      = f.label :first_name_kana
      %br/
      = f.text_field :first_name_kana, autofocus: true
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email"
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password"
    .field
      = f.label :postal_code
      %br/
      = f.text_field :postal_code, autofocus: true
    .field
      = f.label :address
      %br/
      = f.text_field :address, autofocus: true
    .field
      = f.label :telephone_number
      %br/
      = f.text_field :telephone_number, autofocus: true
    .actions
      = f.submit "Sign up"
  = render "customer/shared/links"
